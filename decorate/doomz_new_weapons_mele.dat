ACTOR Knife : Weapon	5003																// Knife
{
  Game Doom
  Weapon.SelectionOrder 5003  //obviously incorrect
  Weapon.Kickback 100 // needs setting. Should be less than baseball bat
  Weapon.SlotNumber 1
  DamageType knife
  +NOALERT
  Obituary "%o was stabbed to death by %k's knife"
  Inventory.PickupMessage "You got a knife"
//  Tag "knife"
//  +WEAPON.WIMPY_WEAPON
  +WEAPON.MELEEWEAPON
	  States
		  {
		  Ready:
			CNFG A 1 A_WeaponReady
			Loop
		  Deselect:
			CNFG A 1 A_Lower
			Loop
		  Select:
			CNFG A 1 A_Raise
			Loop
		  Fire:
			CNFG B 4
			CNFG C 4 A_CustomPunch(10+random(4, 10), 1, 0, "AxeHitPuff")   //again, use custom punch and see if you can get some sound in there.
			CNFG D 2
			CNFG E 2
			CNFG F 2
			CNFG g 4
			CNFG h 4
			CNFG i 4 A_ReFire
			Goto Ready
		  Spawn:
			KNFE A -1
			Stop
		  }
}
//****************************************** Axe

ACTOR Axe : Weapon																	// axe
{
  Game Doom
  Weapon.SelectionOrder 5002// change this
  Weapon.Kickback 100 // needs calibrating
  Weapon.SlotNumber 1
  DamageType axe
  +NOALERT
  Obituary "%o was chopped into pieces by %k's axe"
  Inventory.PickupMessage "You picked up an axe"
   Tag "axe"
//  Tag "$TAG_FIST"
//  +WEAPON.WIMPY_WEAPON
  +WEAPON.MELEEWEAPON
	  States
		  {
		  Ready:
			cfrx A 1 A_WeaponReady
			Loop
		  Deselect:
			cfrx A 1 A_Lower
			Loop
		  Select:
			cfrx A 1 A_Raise
			Loop
		  Fire:
			cfrx AB 3
			cfrx c 5
			//AXEG I 2 //A_PlaySound("weapons/axeswing", CHAN_WEAPON) #would be good to get an axe swing in here. Check the original axe?
			//AXEG A 0 
			cfrx e 2
			
			cfrx f 2 A_CustomPunch(20+random(4, 16), 1, 0, "AxeHitPuff") // decide on the actual damage that this should do
			cfrx g 2
			cfrx h 2
			TNT1 A 7 //A_Light2 - a_light is no longer useful as this will be changed constantly by our script
			cfrx i 3
			cfrx j 3
			cfrx k 3
			cfrx A 5
			
			Goto Ready
		   Spawn:
			 ZXXD  A -1
			 Stop
		  }
}

